# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dynastia?schema=public"

# JWT Token Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
ACCESS_TOKEN_SECRET="your-access-token-secret-here-minimum-64-characters-recommended"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-here-different-from-access-secret"

# Token Expiry Times
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"
